pipeline {
  agent {label 'dev-back'}

  // Remove tools block if not configured in Jenkins global tools configuration
  // Instead, use environment to specify tool paths
  environment {
    REMOTE_URL = "https://github.com/amiraz014/Sirius-ing2-hopital.git"
    JAVA_HOME = tool 'JDK21'
    MAVEN_HOME = tool 'Maven3'
    PATH = "${MAVEN_HOME}/bin:${JAVA_HOME}/bin:${PATH}"
  }

  stages {
    stage('Clone') {
      steps {
        git branch: "main", url: "${env.REMOTE_URL}"
      }
    }

    stage('Install Dependencies') {
      steps {
        sh '''
          cd Ing2-proto/proto-back
          ${MAVEN_HOME}/bin/mvn clean install -V
        '''
      }
    }

    stage('Build') {
      steps {
        sh '''
          cd Ing2-proto/proto-back
          ${MAVEN_HOME}/bin/mvn clean package
        '''
      }
    }

    stage('Deploy') {
      steps {
        // Add deployment steps if needed
        sh '''
          echo "Deployment steps to be configured"
        '''
      }
    }
  }

  post {
    success {
      echo 'Build successful!'
    }
    failure {
      echo 'Build failed. Please check the logs.'
    }
  }
}