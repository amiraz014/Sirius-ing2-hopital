pipeline {
    agent none
    environment {
        REPO_URL = "https://github.com/amiraz014/Sirius-ing2-hopital.git"
        REMOTE_USER = "eco"
    }
    stages {
        stage('Cloning the repository') {
            agent {
                docker {
                     image 'ecotracer/front-agent'
                    args '--user root --entrypoint=""'
                }
            }
            steps {
                git branch: "main", url: "${env.REPO_URL}"
            }
        }

        stage("Build") {
            agent {
                docker {
                    image 'ecotracer/front-agent'
                    args '--user root'
                }
            }
            steps {
                script {
                    sh '''
                        ls -la
                         cd Ing2-proto/proto-front
                        rm -rf node_modules package-lock.json
                        npm cache clean --force
                        npm cache verify
                        npm install --no-optional
                        npm install rollup --save-dev
                        node --version
                        npm --version
                        npm run build
                        ls -la
                    '''
                }
            }
        }
        stage("Archive artifact") {
            agent {
                docker {
                    image 'ecotracer/front-agent'
                    args '--user root'
                }
            }
            steps {
                archiveArtifacts artifacts: "build,Dockerfile", allowEmptyArchive: false
            }
        }
    }
}