pipeline {
    agent {label 'dev-front'}
    environment{
        REOMTE_URL = "https://github.com/amiraz014/Sirius-ing2-hopital.git"

    }

    stages{
        stage('clone'){
            steps {
            git branch: "main", url:"${env.REOMTE_URL}"
            }
        }
        stage('install'){
            steps{
                sh '''
                        rm -rf package-lock.json
                        cd Ing2-proto/proto-front
                        pwd
                        ls
                        npm install --force
                        node --version
                        npm --version
                '''
            }
        }
        stage('build'){
            steps{
                sh '''
                        cd Ing2-proto/proto-front
                        npm run build
                '''
            }
        }
        stage ('deploy'){
            steps {
                sh '''
                   bash /home/devfont/rundevfont.sh
                '''
            }
        }
    }
}